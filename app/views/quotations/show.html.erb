<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @quotation %>

    <%= link_to "Edit this quotation", edit_quotation_path(@quotation), class: "mt-2 btn" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this quotation", quotation_path(@quotation), method: :delete, class: "mt-2 btn" %>
    </div>
    <%= link_to "Back to quotations", quotations_path, class: "ml-2 btn" %>
  </div>
</div>
