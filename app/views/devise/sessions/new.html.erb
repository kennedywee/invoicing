<div class='flex flex-col items-center'>
  <%= link_to root_path do %>
    <div class="flex items-center mb-6 text-2xl font-semibold">
      <%= image_tag 'logo.svg', class: 'w-8 h-8 mr-2' %>
      Invoicing
    </div>
  <% end %>
  <div class='bg-gray-800 rounded-lg border-gray-700 px-6 py-8'>
    <h1 class="text-xl font-bold leading-tight tracking-tight">
      Sign in to your account
    </h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'space-y-4' }) do |f| %>
      <div class="field">
        <%= f.label :email, class: 'label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input input-bordered w-full' %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'label' %>
        <%= f.password_field :password, autocomplete: "current-password", class: 'input input-bordered w-full' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="flex items-center">
          <%= f.check_box :remember_me, class: 'checkbox checkbox-primary mr-2' %>
          <%= f.label :remember_me, class: 'label' %>
        </div>
      <% end %>

      <div class="">
        <%= f.submit "Log in", class: 'btn btn-primary w-full' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
